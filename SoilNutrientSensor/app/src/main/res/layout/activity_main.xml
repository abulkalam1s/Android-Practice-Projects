<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soil Nutrient Sensor"
                android:textSize="32sp"
                android:textAlignment="center"
                android:textColor="#A50E0E"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/nImg"
                        android:layout_width="89dp"
                        android:layout_height="109dp"
                        android:src="@drawable/n2_removebg" />

                    <TextView
                        android:id="@+id/n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nitrogen"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nitrogenTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:background="#FB8C00"
                    android:gravity="center"
                    android:text="23%"
                    android:textAlignment="center"
                    android:textSize="38sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/pImg"
                        android:layout_width="89dp"
                        android:layout_height="109dp"
                        android:src="@drawable/phosphorus_" />

                    <TextView
                        android:id="@+id/p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phosphorus"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/phosphorusTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:background="#FB8C00"
                    android:gravity="center"
                    android:text="33%"
                    android:textAlignment="center"
                    android:textSize="38sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/kImg"
                        android:layout_width="89dp"
                        android:layout_height="109dp"
                        android:src="@drawable/potassium" />

                    <TextView
                        android:id="@+id/k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Potassium"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/potassiumTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:background="#FB8C00"
                    android:gravity="center"
                    android:text="33%"
                    android:textAlignment="center"
                    android:textSize="38sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/mImg"
                        android:layout_width="89dp"
                        android:layout_height="109dp"
                        android:src="@drawable/moisture" />

                    <TextView
                        android:id="@+id/m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Moisture"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/moistureTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:background="#FB8C00"
                    android:gravity="center"
                    android:text="33%"
                    android:textAlignment="center"
                    android:textSize="38sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/tImg"
                        android:layout_width="89dp"
                        android:layout_height="109dp"
                        android:src="@drawable/temp" />

                    <TextView
                        android:id="@+id/t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/temperatureTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:background="#FB8C00"
                    android:gravity="center"
                    android:text="33%"
                    android:textAlignment="center"
                    android:textSize="38sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
