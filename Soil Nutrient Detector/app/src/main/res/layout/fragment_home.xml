<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#931442"
    tools:context=".fragments.AboutFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#931442"
       android:orientation="vertical"
       tools:context=".fragments.HomeFragment">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:background="#FFFFFF"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="8dp">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="89dp"
                android:layout_height="109dp"
                android:src="@drawable/n2_removebg"

                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nitrogen"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"

                />
         </LinearLayout>

         <TextView
             android:id="@+id/nitrogenTxt"
             android:layout_width="wrap_content"
             android:layout_height="54dp"
             android:layout_gravity="center"
             android:layout_marginBottom="12dp"
             android:layout_weight="1"
             android:background="#FB8C00"
             android:gravity="center"
             android:text="23%"
             android:textAlignment="center"
             android:textSize="38sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:background="#FFFFFF"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="89dp"
                android:layout_height="109dp"
                android:src="@drawable/phosphorus_" />

            <TextView
                android:id="@+id/phosphorusTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phosphorus"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"

                />
         </LinearLayout>

         <TextView
             android:id="@+id/textView10"
             android:layout_width="wrap_content"
             android:layout_height="54dp"
             android:layout_gravity="center"
             android:layout_marginBottom="12dp"
             android:layout_weight="1"
             android:background="#FB8C00"
             android:gravity="center"
             android:text="18%"
             android:textAlignment="center"
             android:textSize="38sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:background="#FFFFFF"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="8dp">

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="89dp"
                android:layout_height="109dp"
                android:src="@drawable/potassium" />

            <TextView
                android:id="@+id/potassiumTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Potassium"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"

                />
         </LinearLayout>

         <TextView
             android:id="@+id/textView12"
             android:layout_width="wrap_content"
             android:layout_height="54dp"
             android:layout_gravity="center"
             android:layout_marginBottom="12dp"
             android:layout_weight="1"
             android:background="#FB8C00"
             android:gravity="center"
             android:text="22%"
             android:textAlignment="center"
             android:textSize="38sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:background="#FFFFFF"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="8dp">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="89dp"
                android:layout_height="109dp"
                android:src="@drawable/moisture" />

            <TextView
                android:id="@+id/moistureTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moisture"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"

                />
         </LinearLayout>

         <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="54dp"
             android:layout_gravity="center"
             android:layout_marginBottom="12dp"
             android:layout_weight="1"
             android:background="#FB8C00"
             android:gravity="center"
             android:text="41%"
             android:textAlignment="center"
             android:textSize="38sp" />

      </LinearLayout>


   </LinearLayout>
</ScrollView>