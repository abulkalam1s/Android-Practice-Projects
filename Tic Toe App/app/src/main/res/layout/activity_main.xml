            android:id="@+id/btn5"
            android:onClick="tick" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:onClick="tick" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:onClick="tick" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:onClick="tick" />

        <androidx.appcompat.widget.AppCompatButton
